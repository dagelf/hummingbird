#!/bin/sh

. /usr/lib/hummingbird/rc.lib

for file in /etc/hummingbird.d/*.pre.shutdown /etc/rc.d/*.pre.shutdown; do
    [ -f "$file" ] && . "$file"
done

rm -r /tmp/*
dd count=1 bs=512 if=/dev/random of=/var/lib/hummingbird/random.seed

# killall processes

swapoff -a
umount -a -l
umount -a

mount -o remount,ro /
